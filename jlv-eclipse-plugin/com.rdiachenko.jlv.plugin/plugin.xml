<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="com.rdiachenko.jlv.plugin.category"
            name="Java Logging Viewer">
      </category>
      <view
            category="com.rdiachenko.jlv.plugin.category"
            class="com.rdiachenko.jlv.plugin.view.LogListView"
            icon="icons/loglist.png"
            id="com.rdiachenko.jlv.plugin.view.loglist"
            name="Log list"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.contexts">
      <context
            id="com.rdiachenko.jlv.plugin.context.loglist"
            name="Log list context"
            parentId="org.eclipse.ui.contexts.window">
      </context>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.rdiachenko.jlv.plugin.action.quicksearch"
            contextId="com.rdiachenko.jlv.plugin.context.loglist"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+F">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="com.rdiachenko.jlv.plugin.action.quicksearch"
            name="Quick search">
      </command>
      <command
            id="com.rdiachenko.jlv.plugin.action.startserver"
            name="Start server">
      </command>
      <command
            id="com.rdiachenko.jlv.plugin.action.stopserver"
            name="Stop server">
      </command>
      <command
            id="com.rdiachenko.jlv.plugin.action.clearview"
            name="Clear view">
      </command>
      <command
            id="com.rdiachenko.jlv.plugin.action.scrolltobottom"
            name="Scroll to bottom">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.rdiachenko.jlv.plugin.view.QuickSearchAction"
            commandId="com.rdiachenko.jlv.plugin.action.quicksearch">
         <activeWhen>
            <reference
                  definitionId="com.rdiachenko.jlv.plugin.view.inloglist">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="com.rdiachenko.jlv.plugin.view.StartServerAction"
            commandId="com.rdiachenko.jlv.plugin.action.startserver">
         <activeWhen>
            <reference
                  definitionId="com.rdiachenko.jlv.plugin.view.inloglist">
            </reference>
         </activeWhen>
         <enabledWhen>
            <with
                  variable="jlvServerStarted">
               <equals
                     value="false">
               </equals>
            </with></enabledWhen>
      </handler>
      <handler
            class="com.rdiachenko.jlv.plugin.view.StopServerAction"
            commandId="com.rdiachenko.jlv.plugin.action.stopserver">
         <activeWhen>
            <reference
                  definitionId="com.rdiachenko.jlv.plugin.view.inloglist">
            </reference>
         </activeWhen>
         <enabledWhen>
            <with
                  variable="jlvServerStarted">
               <equals
                     value="true">
               </equals>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="com.rdiachenko.jlv.plugin.view.ClearViewAction"
            commandId="com.rdiachenko.jlv.plugin.action.clearview">
         <activeWhen>
            <reference
                  definitionId="com.rdiachenko.jlv.plugin.view.inloglist">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="com.rdiachenko.jlv.plugin.view.ScrollToBottomAction"
            commandId="com.rdiachenko.jlv.plugin.action.scrolltobottom">
         <activeWhen>
            <reference
                  definitionId="com.rdiachenko.jlv.plugin.view.inloglist">
            </reference>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:com.rdiachenko.jlv.plugin.view.loglist">
         <command
               commandId="com.rdiachenko.jlv.plugin.action.quicksearch"
               icon="icons/quicksearch.png"
               label="Quick search"
               style="push"
               tooltip="Quick search">
         </command>
         <command
               commandId="com.rdiachenko.jlv.plugin.action.startserver"
               icon="icons/startserver.png"
               label="Start server"
               style="push"
               tooltip="Start server">
         </command>
         <command
               commandId="com.rdiachenko.jlv.plugin.action.stopserver"
               icon="icons/stopserver.png"
               label="Stop server"
               style="push"
               tooltip="Stop server">
         </command>
         <command
               commandId="com.rdiachenko.jlv.plugin.action.clearview"
               icon="icons/clear.png"
               label="Clear view"
               style="push"
               tooltip="Clear view">
         </command>
         <command
               commandId="com.rdiachenko.jlv.plugin.action.scrolltobottom"
               icon="icons/scrolltobottom.png"
               label="Scroll to bottom"
               style="toggle"
               tooltip="Scroll to bottom">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="com.rdiachenko.jlv.plugin.view.inloglist">
         <with
               variable="activePartId">
            <equals
                  value="com.rdiachenko.jlv.plugin.view.loglist">
            </equals>
         </with>
      </definition>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="com.rdiachenko.jlv.plugin.view.SourceProvider">
         <variable
               name="jlvServerStarted"
               priorityLevel="activePartId">
         </variable>
      </sourceProvider>
   </extension>

</plugin>
