<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension point="org.eclipse.ui.preferencePages">
      <page
            class="com.github.rd.jlv.eclipse.ui.preferences.GeneralPreferencePage"
            id="com.github.rd.jlv.eclipse.ui.preferences.general"
            name="JLV">
      </page>
      <page
            category="com.github.rd.jlv.eclipse.ui.preferences.general"
            class="com.github.rd.jlv.eclipse.ui.preferences.additional.AdditionalPreferencePage"
            id="com.github.rd.jlv.eclipse.ui.preferences.additional"
            name="Additional">
      </page>
   </extension>
   
   <extension
         point="org.eclipse.ui.views">
      <category
            id="com.github.rd.jlv.ui.views.category"
            name="JLV">
      </category>
      <view
            category="com.github.rd.jlv.ui.views.category"
            class="com.github.rd.jlv.eclipse.ui.views.LogListView"
            icon="icons/jlvLogListViewIcon.png"
            id="com.github.rd.jlv.ui.views.loglistview"
            name="JLV log list"
            restorable="true">
      </view>
      <view
            category="com.github.rd.jlv.ui.views.category"
            class="com.github.rd.jlv.eclipse.ui.views.LogDetailsView"
            icon="icons/jlvLogDetailsViewIcon.png"
            id="com.github.rd.jlv.ui.views.logdetailsview"
            name="JLV log details"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.github.rd.jlv.eclipse.ui.views.QuickSearchAction"
            commandId="com.github.rd.jlv.ui.views.quickSearchAction">
      </handler>
      <handler
            class="com.github.rd.jlv.eclipse.ui.views.StopServerAction"
            commandId="com.github.rd.jlv.eclipse.ui.views.stopServerAction">
         <enabledWhen>
            <with
                  variable="com.github.rd.jlv.ui.views.view.serverStarted">
               <equals
                     value="true">
               </equals>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="com.github.rd.jlv.eclipse.ui.views.StartServerAction"
            commandId="com.github.rd.jlv.eclipse.ui.views.startServerAction">
         <enabledWhen>
            <with
                  variable="com.github.rd.jlv.ui.views.view.serverStarted">
               <equals
                     value="false">
               </equals>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="com.github.rd.jlv.eclipse.ui.views.ClearViewAction"
            commandId="com.github.rd.jlv.eclipse.ui.views.clearViewAction">
      </handler>
      <handler
            class="com.github.rd.jlv.eclipse.ui.views.ToggleScrollToBottomAction"
            commandId="com.github.rd.jlv.eclipse.ui.views.toggleScrollToBottomAction">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:com.github.rd.jlv.ui.views.loglistview">
         <command
               commandId="com.github.rd.jlv.ui.views.quickSearchAction"
               icon="icons/quickSearchIcon.png"
               label="Quick search"
               style="push"
               tooltip="Quick search">
         </command>
         <command
               commandId="com.github.rd.jlv.ui.views.stopServerAction"
               icon="icons/stopServerIcon.png"
               label="Stop server"
               style="push"
               tooltip="Stop server">
         </command>
         <command
               commandId="com.github.rd.jlv.ui.views.startServerAction"
               icon="icons/startServerIcon.png"
               label="Start server"
               style="push"
               tooltip="Start server">
         </command>
         <command
               commandId="com.github.rd.jlv.ui.views.clearViewAction"
               icon="icons/clearLogsIcon.png"
               label="Clear view"
               style="push"
               tooltip="Clear view">
         </command>
         <command
               commandId="com.github.rd.jlv.ui.views.toggleScrollToBottomAction"
               icon="icons/toggleScrollToBottom.png"
               label="Toggle to bottom"
               style="toggle"
               tooltip="Toggle scroll to view bottom">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="com.github.rd.jlv.eclipse.ui.views.ViewSourceProvider">
         <variable
               name="com.github.rd.jlv.ui.views.view.serverStarted"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.github.rd.jlv.ui.views.quickSearchAction"
            contextId="com.github.rd.jlv.ui.views.loglistview.context"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+F">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="com.github.rd.jlv.ui.views.quickSearchAction"
            name="Quick search">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.contexts">
      <context
            id="com.github.rd.jlv.ui.views.loglistview.context"
            name="JLV context"
            parentId="org.eclipse.ui.contexts.window">
      </context>
   </extension>

</plugin>
