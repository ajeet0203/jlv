<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension point="org.eclipse.ui.preferencePages">
      <page
            class="com.rdiachenko.jlv.ui.preferences.GeneralPreferencePage"
            id="com.rdiachenko.jlv.ui.preferences.general"
            name="JLV">
      </page>
   </extension>
   
   <extension point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.rdiachenko.jlv.ui.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="com.rdiachenko.jlv.ui.views.category"
            name="JLV">
      </category>
      <view
            category="com.rdiachenko.jlv.ui.views.category"
            class="com.rdiachenko.jlv.ui.views.JlvView"
            icon="icons/jlv_view.png"
            id="com.rdiachenko.jlv.ui.views.view"
            name="Main view"
            restorable="true">
      </view>
      <view
            category="com.rdiachenko.jlv.ui.views.category"
            class="com.rdiachenko.jlv.ui.views.JlvDetailedView"
            icon="icons/jlv_detailed_view.png"
            id="com.rdiachenko.jlv.ui.views.detailedview"
            name="Detailed view"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.rdiachenko.jlv.ui.views.QuickSearchAction"
            commandId="com.rdiachenko.jlv.ui.views.quickSearchAction">
      </handler>
      <handler
            class="com.rdiachenko.jlv.ui.views.StopServerAction"
            commandId="com.rdiachenko.jlv.ui.views.stopServerAction">
         <enabledWhen>
            <with
                  variable="com.rdiachenko.jlv.ui.views.view.serverStarted">
               <equals
                     value="true">
               </equals>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="com.rdiachenko.jlv.ui.views.StartServerAction"
            commandId="com.rdiachenko.jlv.ui.views.startServerAction">
         <enabledWhen>
            <with
                  variable="com.rdiachenko.jlv.ui.views.view.serverStarted">
               <equals
                     value="false">
               </equals>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="com.rdiachenko.jlv.ui.views.ClearViewAction"
            commandId="com.rdiachenko.jlv.ui.views.clearViewAction">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:com.rdiachenko.jlv.ui.views.view">
         <command
               commandId="com.rdiachenko.jlv.ui.views.quickSearchAction"
               icon="icons/quick_search.png"
               label="Quick search"
               style="push"
               tooltip="Quick search">
         </command>
         <command
               commandId="com.rdiachenko.jlv.ui.views.stopServerAction"
               icon="icons/stop_server.png"
               label="Stop server"
               style="push"
               tooltip="Stop server">
         </command>
         <command
               commandId="com.rdiachenko.jlv.ui.views.startServerAction"
               icon="icons/start_server.png"
               label="Start server"
               style="push"
               tooltip="Start server">
         </command>
         <command
               commandId="com.rdiachenko.jlv.ui.views.clearViewAction"
               icon="icons/clear.png"
               label="Clear view"
               style="push"
               tooltip="Clear view">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="com.rdiachenko.jlv.ui.views.ViewSourceProvider">
         <variable
               name="com.rdiachenko.jlv.ui.views.view.serverStarted"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>

</plugin>
